@model ProductsListViewModel
@foreach (var p in Model.Products)

{
    <div style="width:980px; margin-left:auto; margin-right:auto;">
        <div class="card card-outline-primary m-1 p-1">
            <div class="bg-faded p-1">
                <h4>
                    @p.Name
                    <span class="badge badge-pill badge-success" style="float:right">
                        <small>@p.Price.ToString("c")</small>
                    </span>
                </h4>
            </div>
            <div class="card-text p-1">@p.Description</div>
            <div class="card-text p-1">Stock: @p.Stock</div>
            <div class="card-text p-1">Wrap Available: @p.Wrap</div>
            <div class="card-text p-1">Gift Available: @p.Gift</div>
        </div>
    </div>
}
    <div style="width:980px; margin-left:auto; margin-right:auto;">
<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory"
     class="btn-group pull-right m-1">
</div>
        </div>



